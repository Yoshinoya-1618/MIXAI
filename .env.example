# ============================================
# MIXAI 環境変数設定テンプレート
# ============================================
# このファイルを .env.local にコピーして使用してください
# cp .env.example .env.local

# ============================================
# Supabase設定（必須）
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# Stripe設定（必須）
# ============================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Stripe価格ID
NEXT_PUBLIC_STRIPE_PRICE_LITE_PLAN=price_xxx
NEXT_PUBLIC_STRIPE_PRICE_STANDARD_PLAN=price_xxx
NEXT_PUBLIC_STRIPE_PRICE_CREATOR_PLAN=price_xxx
NEXT_PUBLIC_STRIPE_PRICE_CREDIT_50=price_xxx
NEXT_PUBLIC_STRIPE_PRICE_CREDIT_100=price_xxx
NEXT_PUBLIC_STRIPE_PRICE_CREDIT_200=price_xxx

# ============================================
# アプリケーション設定（必須）
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=MIXAI

# ============================================
# 認証設定（必須）
# ============================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key

# ============================================
# Cron設定（本番環境のみ）
# ============================================
CRON_SECRET=your-secure-random-string

# ============================================
# AI/ML設定（オプション）
# ============================================
# ML機能の有効化（デフォルト: false）
ENABLE_CPU_ML=false

# 学習に必要な最小サンプル数（デフォルト: 1000）
ML_MIN_SAMPLES=1000

# モック版MLを使用（開発環境用、デフォルト: true）
USE_MOCK_ML=true

# ============================================
# Creator プラン設定（オプション）
# ============================================
# HQマスターをデフォルトで有効化（0 or 1）
CREATOR_HQ_MASTER_DEFAULT=1

# 強力ノイズ抑制をデフォルトで有効化（0 or 1）
CREATOR_DENOISE_STRONG_DEFAULT=1

# マスタリング設定
MASTER_OS_MAX=16
MASTER_TP_CEILING_DB=-1.0
DENOISE_MAX_REDUCTION_DB=14
