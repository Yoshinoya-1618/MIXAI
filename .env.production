# ================================================
# アプリケーション設定
# ================================================

# 開発環境URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# アプリケーション名
NEXT_PUBLIC_APP_NAME=MIXAI

# サポートメール
NEXT_PUBLIC_SUPPORT_EMAIL=support@[YOUR_DOMAIN].com

# ================================================
# 決済設定
# ================================================
PAYMENT_PROVIDER=stripe

# ================================================
# アプリケーション制約
# ================================================
# 最大処理時間（秒）
MAX_DURATION_SEC=60

# 最大ファイルサイズ（MB）
MAX_FILE_MB=20

# 署名付きURL有効期限（秒）
SIGNED_URL_TTL_SEC=300

# データ保持期間（日）
RETENTION_DAYS=7

# ================================================
# セキュリティ設定
# ================================================
# セッションシークレット（ランダムな文字列を生成）
SESSION_SECRET=[GENERATE_RANDOM_STRING_32_CHARS]

# CORS許可オリジン
CORS_ALLOWED_ORIGINS=https://[YOUR_DOMAIN].com

# ================================================
# 監視・ログ設定（オプション）
# ================================================
# Sentry DSN（エラー監視）
# SENTRY_DSN=https://[YOUR_SENTRY_DSN]@sentry.io/[PROJECT_ID]

# LogRocket/DataDog等のトラッキング
# LOGROCKET_APP_ID=[YOUR_LOGROCKET_ID]

# ================================================
# Redis（本番環境でキャッシュ/セッション管理に使用）
# ================================================
# REDIS_URL=redis://:[PASSWORD]@[HOST]:[PORT]

# ================================================
# CDN設定（オプション）
# ================================================
# NEXT_PUBLIC_CDN_URL=https://cdn.[YOUR_DOMAIN].com

# ================================================
# 機能フラグ
# ================================================
# 7日間無料トライアル
ENABLE_FREE_TRIAL=true
FREE_TRIAL_DAYS=7
FREE_TRIAL_CREDITS=2.0

# メンテナンスモード
MAINTENANCE_MODE=false

# ================================================
# レート制限
# ================================================
# API呼び出し制限（分あたり）
RATE_LIMIT_PER_MINUTE=60

# 同時処理上限
MAX_CONCURRENT_JOBS=2

# ================================================
# Creator 高度処理の既定ON/OFF（運用での一時停止用）
# ================================================
CREATOR_HQ_MASTER_DEFAULT=1
CREATOR_DENOISE_STRONG_DEFAULT=1

# オーバーサンプリング上限・安全パラメータ
MASTER_OS_MAX=16
MASTER_TP_CEILING_DB=-1.0
DENOISE_MAX_REDUCTION_DB=14

# ================================================